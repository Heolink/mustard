{
    "name": "hamjoint/mustard",
    "description": "The open source marketplace platform.",
    "keywords": ["mustard", "marketplace", "auctions", "classifieds", "ecommerce"],
    "license": "GPL-3.0",
    "authors": [
        {
            "name": "Tom Pitcher",
            "email": "tom@hamjoint.org"
        }
    ],
    "support": {
        "issues": "https://github.com/hamjoint/mustard/issues",
        "source": "https://github.com/hamjoint/mustard"
    },
    "require": {
        "php": ">=5.5.9",
        "laravel/framework": "^5.0",
        "doctrine/dbal": "^2.5",
        "pda/pheanstalk": "^3.0",
        "erusev/parsedown": "^1.5",
        "tjbp/eloquent-joins": "@dev",
        "tjbp/tablelegs": "@dev",
        "tjbp/countries": "@dev",
        "dansmith/laravel5-foundation": "dev-master"
    },
    "require-dev": {
        "fzaninotto/faker": "^1.5",
        "phpunit/phpunit": "^4.0",
        "symfony/css-selector": "2.8.*|3.0.*",
        "symfony/dom-crawler": "2.8.*|3.0.*",
        "laravel/laravel": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Hamjoint\\Mustard\\": "src/lib/"
        },
        "files": [
            "src/includes/helpers.php"
        ]
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    }
